<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135dp"
    android:layout_height="135dp"
    android:layout_margin="0.1dp"
    android:layout_weight="1"
    android:padding="0.1dp">

    <ImageView
        android:id="@+id/ItemViewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hapticFeedbackEnabled="false"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dateArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itemview_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="area"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateArea" />

    <TextView
        android:id="@+id/itemview_district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="district"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemview_area" />

    <TextView
        android:id="@+id/titleArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uid"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>