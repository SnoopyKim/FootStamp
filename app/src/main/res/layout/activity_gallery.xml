<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backcolor"
    tools:context=".activity.GalleryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/GDateText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="날짜 선택하기"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Garea"
            android:text="area"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toStartOf="@+id/Gdistrict"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Gdistrict"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:text="district"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/Gimage"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:contentDescription="Search Image"
        android:layout_gravity="center"
        android:background="#FFFFF0"
        android:src="@drawable/foot_logo" />

    <TextView
        android:id="@+id/Gmemo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="top"
        android:layout_marginRight="20dp"
        android:hint="여행은 어떠셨나요"
        android:textColor="@color/black"
        android:background="#FFFFF0"
        android:minHeight="48dp"
        android:textSize="17sp" />

    <Button
        android:id="@+id/Gedit"
        android:layout_width="50dp"
        android:layout_gravity="right"
        android:textSize="20sp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text=".\n.\n." />


</LinearLayout>